<h1>leftovers#show</h1>


<p>タイトル:<%= @leftover.title %></p>
<p>本文:<%= @leftover.content %></p>
<%= image_tag(@leftover.image.url) %>
<p>場所:<%= @leftover.address %></p>
<p>始まり:<%= @leftover.start_on %></p>
<p>終わり:<%= @leftover.end_on %></p>
<p>カテゴリー: <%= Category.find(@leftover.category_id).name %></p>
<p>マップ: </p>
    <div id="map"></div>
    <style>
        #map {
        height: 500px;
        width: 70%;
      }
    </style>
    <script>
      function initMap() {
        var uluru = {lat: <%= @leftover.latitude %>, lng: <%= @leftover.longitude %>};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 16,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbsOri1qdyB0z7tVY6hB8-_3wSTxkx5b4&callback=initMap"
async defer></script>
